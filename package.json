{
  "name": "tt_sigmasoftware",
  "version": "1.0.0",
  "description": "typescript nodemon ts-node eslint types/node",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node build/",
    "dev": "nodemon --watch server -e ts,ejs --exec npx ts-node server",
    "lint": "eslint . --ignore-path .gitignore",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write . --ignore-path .gitignore",
    "fix-style": "npm run format && npm run lint -- --fix",
    "prepare": "husky install",
    "htmllint": "npx linthtml client/**/*.html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@linthtml/linthtml": "^0.9.3",
    "@mate-academy/eslint-config": "^0.0.20",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "eslint": "^8.27.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.js": "npm run lint",
    "*.ts": "npm run lint"
  }
}
